      400:
        body:
         application/json:
          example: !include examples/addAddressResponseFailure.json
        
      500:
        body:
         application/json:
          example: !include examples/addAddressResponseFailure.json

          
  /{addressId}:
    get:
      description: Get  Address details
      is: [x-headers-required]
      responses:
        200:
          body:
           application/json: 
            example: !include examples/getAddressResponseSuccess.json
        400:
          body:
           application/json:
            example: !include examples/getAddressResponseFailure.json
          
        500:
          body:
           application/json:
            example: !include examples/getAddressResponseFailure.json 
          
    put:
      description: Update  Address details
      is: [x-headers-required]
      body:
        application/json:
          example: !include examples/updateAddressRequest.json
      responses:
        200:
          body:
           application/json:
            example: !include examples/updateAddressResponseSuccess.json
        400:
          body:
           application/json:
            example: !include examples/updateAddressResponseFailure.json
          
        500:
          body:
           application/json:
            example: !include examples/updateAddressResponseFailure.json  
    delete:
      description: Delete  Address details
      is: [x-headers-required]
      responses:
        200:
          body:
           application/json:
            example: !include examples/deleteAddressResponseSuccess.json
        400:
          body:
           application/json:
            example: !include examples/deleteAddressResponseFailure.json
          
        500:
          body:
           application/json:
            example: !include examples/deleteAddressResponseFailure.json  
                   