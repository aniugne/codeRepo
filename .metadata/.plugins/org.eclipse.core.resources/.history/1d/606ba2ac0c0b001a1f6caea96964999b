#%RAML 1.0
title: Contact Management API
version: 1.0
baseUri: http://localhost:9096/contactManagementAPI/1.0
protocols : [HTTP]

traits:
  x-headers-required:
    headers:
      x-token:
        type: string
        required: true
        example : '7CwpkrYbahgkjdkgfjksd'

/contact:
  displayName : Add Contact 
  post:
    description: Add  Contact details
    is: [x-headers-required]
    body:
      application/json:
        example: !include examples/addContactRequest.json
    responses:
      200:
        body:
         application/json:
          example: !include examples/addContactResponseSuccess.json
      400:
        body:
         application/json:
          example: !include examples/addContactResponseFailure.json
        
      500:
        body:
         application/json:
          example: !include examples/addContactResponseFailure.json

          
  /{customerId}:
    get:
      description: Get  Contact details
      is: [x-headers-required]
      responses:
        200:
          body:
           application/json: 
            example: !include examples/getContactResponseSuccess.json
        400:
          body:
           application/json:
            example: !include examples/getContactResponseFailure.json
          
        500:
          body:
           application/json:
            example: !include examples/getContactResponseFailure.json 
          
    put:
      description: Update  Contact details
      is: [x-headers-required]
      body:
        application/json:
          example: !include examples/updateContactRequest.json
      responses:
        200:
          body:
           application/json:
            example: !include examples/updateContactResponseSuccess.json
        400:
          body:
           application/json:
            example: !include examples/updateContactResponseFailure.json
          
        500:
          body:
           application/json:
            example: !include examples/updateContactResponseFailure.json  
    delete:
      description: Delete  Contact details
      is: [x-headers-required]
      responses:
        200:
          body:
           application/json:
            example: !include examples/deleteContactResponseSuccess.json
        400:
          body:
           application/json:
            example: !include examples/deleteContactResponseFailure.json
          
        500:
          body:
           application/json:
            example: !include examples/deleteContactResponseFailure.json  
