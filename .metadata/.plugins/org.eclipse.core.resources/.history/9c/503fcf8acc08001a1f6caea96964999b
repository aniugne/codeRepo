    <db:mysql-config name="MySQL_Configuration" host="localhost" port="3306" user="anila" password="password" database="CONTACT_MANAGEMENT" doc:name="MySQL Configuration"/>
	<flow name="DB_Customer_Insert" >
		<set-variable variableName="dbResult" value="" doc:name="Variable"/>
        <db:no-operation-selected config-ref="MySQL_Configuration" doc:name="Database"/>
		<db:select doc:name="Select" 
			config-ref="Database_Config" target="dbSelectResult">
			<db:sql>select firstName from CONTACT_MANAGEMENT.Customer where id=1</db:sql>
		</db:select>
		<db:insert doc:name="Insert" 
			config-ref="Database_Config">
			<db:sql>insert into customer
				(firstName,lastName,dateOfBirth,gender,title) values
				(:firstName,:lastName,:dateOfBirth,:gender,:title)</db:sql>
			<db:input-parameters><![CDATA[#[{"firstName":payload.customer.firstName},{"lastName":payload.customer.lastName},{"gender":payload.customer.gender},{"dateOfBirth":null},{"title":payload.customer.title}]]]></db:input-parameters>
		</db:insert>
		<logger level="INFO" doc:name="Logger"
			 message="The response from #[flow.name] is #[payload]" />
		<logger level="INFO" doc:name="Logger"
			 message="The response from #[flow.name] is #[vars.dbSelectResult]" />
